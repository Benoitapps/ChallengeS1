<form name="delete" method="post" action="{{ path('app_airport_delete', {'id': airport.id}) }}" onsubmit="return confirm('Etes vous sûr que vous souhaitez supprimer cet objet ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ airport.id) }}">
    <button class="btn-delete">
        <i class="fas fa-trash-alt">
        Supprimer l'aéroport
        </i>
    </button>
</form>
