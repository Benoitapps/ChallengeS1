{% extends 'base.html.twig' %}

{% block title %}Paiements{% endblock %}

{% block body %}
    <h1>Payment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>N°</th>
                <th>N° Carte</th>
                <th>Expiration</th>
                <th>CVV</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.NumCarte }}</td>
                <td>{{ payment.expiration ? payment.expiration|date('Y-m-d') : '' }}</td>
                <td>{{ payment.cvv }}</td>
                <td>
                    <a href="{{ path('app_payment_show', {'id': payment.id}) }}">Voir</a>
                    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun paiement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payment_new') }}">Créer nouveau</a>
{% endblock %}
