{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
    <h1>Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N°</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>N° Carte</th>
                <td>{{ payment.NumCarte }}</td>
            </tr>
            <tr>
                <th>Expiration</th>
                <td>{{ payment.expiration ? payment.expiration|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>CVV</th>
                <td>{{ payment.cvv }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_index') }}">Retour à la liste</a>

    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">Modifier</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
